@using AFRICOMDMSWEB.Models.ViewModel
@model CatagoryVm

<form asp-action="Create" asp-controller="Catagory" role="form">
	<h4 class="text-center text-capatalize p-2">Share the product</h4>
	<hr />
	<div class="text-danger" asp-validation-summary="All"></div>

	<div class="form-group">
		<label asp-for="category.Title" class="col-md-2"></label>
		<div>
			<input class="form-control" asp-for="category.Title"/>
			<span asp-validation-for="category.Title" class="text-danger"></span>
		</div>
	</div>

	<div class="mb-3 col-md-6">
		<div>
			<select class="form-control" asp-for="category.ParentCategoryId" asp-items="@Model.subCatagories">
				<option disabled selected>__Select Catagory__</option>
			</select>
			<span asp-validation-for="category.ParentCategoryId" class=" text-danger"></span>
		</div>
	</div>

	<div>
		<button type="submit" style="width:80px"  class="btn btn-success form-control">Create</button>
	</div>

</form>